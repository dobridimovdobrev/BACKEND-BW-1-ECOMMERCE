@model List<Carrello>

@{
    ViewData["Title"] = "Carrello";
}

<h1 class="text-center my-3 text-uppercase title-line-center">Il tuo carrello</h1>

@if (Model.Count == 0)
{
    <div class="container text-center my-5">
        <h3>Il tuo carrello è vuoto</h3>
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary mt-3">Continua lo shopping</a>
    </div>
}
else
{
    <div class="container">
        @foreach (var item in Model)
        {
            <div class="row align-items-center border-bottom py-3">
                <div class="col-3">
                    <img src="@item.Product.Image" alt="@item.Product.Name" class="img-fluid" style="max-width: 150px;" />
                </div>
                <div class="col-6">
                    <p class="fw-bold text-uppercase mb-1">@item.Product.Name</p>
                    <p class="text-secondary mb-1">@item.Product.Description.Substring(0, Math.Min(80, item.Product.Description.Length))...</p>
                    <p class="mb-0">€@item.Product.Price</p>
                    @if (!string.IsNullOrEmpty(item.Size))
                    {
                        <p class="text-muted mb-0">Taglia: @item.Size</p>
                    }
                </div>
                <div class="col-2 text-center">
                    <p class="fw-bold text-uppercase mb-1">Quantità:</p>
                    <p class="mb-0">@item.Quantity</p>
                </div>
                <div class="col-1">
                    <form asp-controller="Carrello" asp-action="Remove" asp-route-id="@item.IdCarrello" method="post">
                        <button type="submit" class="btn btn-danger btn-sm">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash3-fill" viewBox="0 0 16 16">
                                <path d="M11 1.5v1h3.5a.5.5 0 0 1 0 1h-.538l-.853 10.66A2 2 0 0 1 11.115 16h-6.23a2 2 0 0 1-1.994-1.84L2.038 3.5H1.5a.5.5 0 0 1 0-1H5v-1A1.5 1.5 0 0 1 6.5 0h3A1.5 1.5 0 0 1 11 1.5m-5 0v1h4v-1a.5.5 0 0 0-.5-.5h-3a.5.5 0 0 0-.5.5M4.5 5.029l.5 8.5a.5.5 0 1 0 .998-.06l-.5-8.5a.5.5 0 1 0-.998.06m6.53-.528a.5.5 0 0 0-.528.47l-.5 8.5a.5.5 0 0 0 .998.058l.5-8.5a.5.5 0 0 0-.47-.528M8 4.5a.5.5 0 0 0-.5.5v8.5a.5.5 0 0 0 1 0V5a.5.5 0 0 0-.5-.5" />
                            </svg>
                        </button>
                    </form>
                </div>
            </div>
        }

        @* Totale ordine *@
        @{
            decimal subtotale = Model.Sum(item => item.Product.Price * item.Quantity);
            decimal spedizione = 0;
            decimal totale = subtotale + spedizione;
        }

        <div class="mt-4 p-4 bg-light">
            <h3 class="mb-3">TOTALE ORDINE</h3>

            <div class="d-flex justify-content-between mb-2">
                <p class="fw-bold mb-0">Subtotale:</p>
                <p class="mb-0">€@subtotale.ToString("F2")</p>
            </div>

            <div class="d-flex justify-content-between mb-2">
                <p class="fw-bold mb-0">Spedizione:</p>
                <p class="mb-0">€@spedizione.ToString("F2")</p>
            </div>

            <hr />

            <div class="d-flex justify-content-between">
                <p class="fw-bold fs-5 mb-0">Totale:</p>
                <p class="fw-bold fs-5 mb-0">€@totale.ToString("F2")</p>
            </div>

            <button class="btn btn-primary btn-lg w-100 mt-3">Procedi all'acquisto</button>
        </div>
    </div>
}