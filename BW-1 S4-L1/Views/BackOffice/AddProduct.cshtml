@{
}
<form asp-action="AddProduct" asp-controller="BackOffice" class="mt-5" method="post">
    <div class="mb-3">
        <label class="form-label fw-bold fs-4">URL Image</label>
        <input type="url" class="form-control" name="Image" placeholder="http://..." required>
    </div>
    <div class="mb-3">
        <label class="form-label fw-bold fs-4">Category</label>
        <input type="text" class="form-control" placeholder="Category" name="IdCategory">
    </div>
    <div class="mb-3 ">
        <label class="form-label fw-bold fs-4">Article</label>
        <input type="text" class="form-control" placeholder="Article" name="Name">
    </div>

    <div class="mb-3 ">
        <label class="form-label fw-bold fs-4">Price</label>
        <input type="number" class="form-control" step=".01" name="Price">
    </div>
    <div class="mb-3 ">
        <label class="form-label fw-bold fs-4">Description</label>
        <input type="text" class="form-control" placeholder="Description" name="Description">
    </div>
    <button type="submit" class="bg-btn-backOffice btn  btn-lg rounded-pill text-black border border-dark my-3">Add Product</button>
</form>