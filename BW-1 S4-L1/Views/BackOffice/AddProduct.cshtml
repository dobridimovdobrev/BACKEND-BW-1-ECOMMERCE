@{
    ViewData["Title"] = "Add product";
}

<div>
    <h1 class="text-uppercase fs-4 fw-bold custom-font my-5">Featured products</h1>
</div>
<form class="mt-5" asp-action="AddProduct" asp-controller="BackOffice" method="post">
    <div class="mb-3">
        <label class="form-label fs-4">Product Name</label>
        <input type="text" class="form-control" name="Name" placeholder="T-shirt" required>
    </div>
    <div class="mb-3">
        <label class="form-label fs-4">Category</label>
        <select class="form-control" name="CategoryId" required>
            <option value="">Seleziona categoria</option>
            <option value="1">Uomini</option>
            <option value="2">Donne</option>
            <option value="3">Bambini</option>
        </select>
    </div>
    <div class="mb-3">
        <label class="form-label fs-4">URL Image</label>
        <input type="url" class="form-control" name="Image" placeholder="http://..." required>
    </div>
    <div class="mb-3">
        <label class="form-label fs-4">Price</label>
        <input type="number" class="form-control" name="Price" step="0.01" placeholder="25.00" required>
    </div>
    <div class="mb-3">
        <label class="form-label fs-4">Quantity</label>
        <input type="number" class="form-control" name="Quantity" placeholder="10" required>
    </div>
    <div class="mb-3">
        <label class="form-label fs-4">Description</label>
        <textarea class="form-control" name="Description" rows="4" placeholder="Description" required></textarea>
    </div>
    <button type="submit" class="bg-btn-backOffice btn btn-lg rounded-pill text-black border border-dark my-3">Add Product</button>
</form>