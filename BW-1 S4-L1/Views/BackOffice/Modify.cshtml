@model Product
@{
}
<form class="mt-5" method="post" asp-action="Modify" asp-controller="BackOffice">
    <input value="@Model.IdProduct" type="text" class="form-control" name="IdProduct" hidden>
    <input value="@Model.Date" class="form-control" name="Date" hidden>

    <div class="mb-3">
        <label class="form-label fw-bold fs-4">URL Image</label>
        <input value="@Model.Image" type="url" class="form-control" name="Image" placeholder="http://..." required>
    </div>
    <div class="mb-3">
        <label class="form-label fw-bold fs-4">Category</label>
        <input value="@Model.Category" type="text" class="form-control" placeholder="Category" name="IdCategory">
    </div>
    <div class="mb-3 ">
        <label class="form-label fw-bold fs-4">Article</label>
        <input value="@Model.Name" type="text" class="form-control" placeholder="Article" name="Name">
    </div>

    <div class="mb-3 ">
        <label class="form-label fw-bold fs-4">Price</label>
        <input value="@Model.Price" type="number" class="form-control" step=".01" name="Price">
    </div>
    <div class="mb-3 ">
        <label class="form-label fw-bold fs-4">Description</label>
        <input value="@Model.Description" type="text" class="form-control" placeholder="Description" name="Description">
    </div>
    <button type="submit" class="bg-btn-backOffice btn  btn-lg rounded-pill text-black border border-dark my-3">Modify Product</button>
</form>